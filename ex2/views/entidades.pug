extends layout 

block content
  .w3-card-4
    header.w3-container.w3-teal
        h1
          span Página de Entidade

    .w3-container
        table.w3-table-all
          tr
            th NIPC da Entidade
            th Nome da Entidade
              tr
                td= entidade[0].NIPC_entidade_comunicante
                td= entidade[0].entidade_comunicante
    .w3-container
        span Total de preços contratuais: #{resSoma}
    .w3-container
        table.w3-table-all
          tr
            th ID do Contrato
            th Objeto Contrato
            th Data de Celebração do Contrato
            th Preço Contratual
            th NIPC - Entidade Comunicante
            th Entidade Comunicante
            each ent in entidade
                tr
                    td 
                        a(href="/" + ent._id)= ent._id
                    td= ent.objectoContrato
                    td= ent.dataCelebracaoContrato
                    td= ent.precoContratual
                    td
                        a(href="/entidades/" + ent.NIPC_entidade_comunicante)= ent.NIPC_entidade_comunicante
                    td= ent.entidade_comunicante
    footer.w3-container.w3-blue
        h5 Generated by EngWeb2024 in #{data}